<configuration>
    <appender name="COLOR" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%cyan(%d{HH:mm:ss})] [%yellow(%logger{0})] [%highlight(%level)] %white(%msg%n)</pattern>
            <!--             ^^^^^^^^^^ -->
        </encoder>
    </appender>
    <root level="info">
        <!-- to use enable this mode pass -Dcolor to jvm -->
        <appender-ref ref="COLOR"/>
    </root>
</configuration>